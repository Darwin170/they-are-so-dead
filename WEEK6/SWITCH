public class MyClass {
  public static void main(String[] args) throws Exception {

        String today = "thursday";

        switch (today) {
            case "monday":
                System.out.println("GO TO SCHOOL");
                break;
            case "tuesday":
                System.out.println("ADVANCE READING IN JAVA");
                break;
            case "wednesday":
                System.out.println("PLAYING VALO");
                break;
            case "thursday":
                System.out.println("LISTEN TO THE LESSON");
                break;
            case "friday":
                System.out.println("DO THE ASSIGNMENT");
                break;
            case "Saturday":
                System.out.println("I PLAY BASKETBALL");
                break;
            case "Sunday":
                System.out.println("PLAY VALO!");
                break;
            default:
            System.out.println("incorrect day");
                break;
        }

    }
}
